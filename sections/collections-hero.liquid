{{ 'collections-hero.css' | asset_url | stylesheet_tag }}

<div class="page-width hero-collections">
	{% if section.settings.title %}
		<h2 class="hero-collections_title">{{ section.settings.title }}</h2>
	{% endif %}
	<div class="swiper hero-swiper">
		<div class="swiper-wrapper">
			{% for block in section.blocks %}
				<div class="swiper-slide hero-collections_banner-container" style="background-color: {{ block.settings.background }}">
					<div class="hero-collections_banner">
						{% if block.settings.image %}
							<img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
						{% endif %}
						{% if block.settings.title %}
							<h3 class="hero-collections_banner-title">{{ block.settings.title }}</h3>
						{% endif %}
						{% if block.settings.subtitle %}
							<p class="hero-collections_banner-subtitle">{{ block.settings.subtitle }}</p>
						{% endif %}
						{% if block.settings.link %}
							<a href="{{ block.settings.link }}" class="hero-collections_banner-link">{{ block.settings.link_text }}</a>
						{% endif %}
					</div>
				</div>
			{% endfor %}
		<div class="swiper-pagination"></div>
	</div>
</div>
</div>


<script>
    var heroSwiper = new Swiper(".hero-swiper", {
      slidesPerView: 1.2,
      spaceBetween: 10,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
			breakpoints: {   
				620: {       
					 slidesPerView: 3,       
					 spaceBetween: 10
				},
				748: {       
					 slidesPerView: 4,       
					 spaceBetween: 10
				}
			}
    });
</script>

{% schema %}
{
  "name": "Hero banners",
  "tag": "section",
  "class": "section",
  "settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		}
	],
  "blocks": [
		{
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "text",
					"id": "subtitle",
					"label": "Subitle"
				},
				{
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
				{
					"type": "color",
					"id": "background",
					"label": "Background color",
					"default": "#ffffff"
				}
      ]
    }
	],
  "presets": [
    {
      "name": "Hero banners"
    }
  ]
}
{% endschema %}
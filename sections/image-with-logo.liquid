{% endcomment %}

<div class="image-with-logo">

	<img class="image-with-logo_img" src="{{ section.settings.image | img_url: 'master' }}" alt="">
	<div class="image-with-logo_content">
		<img src="{{ section.settings.logo | img_url: 'master' }}" alt="">
		<h2 class="image-with-logo_text" style="color: {{ section.settings.color }}">{{ section.settings.title }}</h2>
	</div>

</div>

<style>
	.image-with-logo {
		position: relative;
	}
	.image-with-logo .image-with-logo_img{
		width: 100%
	}
	.image-with-logo_content {
		width: 100%;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);

		display: flex;
    flex-direction: column;
    align-items: center;
	}
	.image-with-logo_content img {

		max-width: 55%;
		width: auto;
		height: auto;
	}
	.image-with-logo_text {
		width: 100%;
		text-align: center;
		font-size: 40px;
		margin: 0;
	}
</style>

{% if section.settings.mobile %}
	<style>
		@media (min-width: 641px) {
			#shopify-section-{{ section.id }} {
				display: none;
			}
		}
	</style>
{% endif %}


{% schema %}
{
  "name": "Image with logo",
  "tag": "section",
  "class": "section",
  "settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "image_picker",
			"id": "logo",
			"label": "Logo"
		},
		{
			"type": "color",
			"id": "color",
			"label": "Text color",
			"default": "#ffffff"
		},
		{
			"type": "checkbox",
			"id": "mobile",
			"label": "Only mobile",
			"default": true
		}
	],
  "blocks": [],
  "presets": [
    {
      "name": "Image with logo"
    }
  ]
}
{% endschema %}